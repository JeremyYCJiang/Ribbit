<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">


    <ImageView style="@style/GridImage"
        android:id="@+id/userPhotoImageView"
        android:src="@drawable/avatar_empty"/>

    <ImageView style="@style/GridImage"
        android:id="@+id/userPhotoSelectedImageView"
        android:src="@drawable/avatar_selected"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/usernameLabelTextView"
        android:text="Text Username"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:maxLines="2"
        android:padding="4dp"
        android:layout_below="@+id/userPhotoImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>